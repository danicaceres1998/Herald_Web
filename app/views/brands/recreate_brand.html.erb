<h1 class="text-center mt-3 text-white">Select the Products</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
      <%= render 'shared/error', obj: @errors %>
      <%= form_tag biller_filter_products_path, method: 'post', class: "shadow mb-3 bg-secondary rounded justify-content-center" do %>
        <% @brands.each do |br| %>
          <h4 class="alert-heading ml-3 mb-3"><li><%= br.brand_name %>:</li></h4>
          <div class="form-group justify-content-center row">
            <table class="table col-11 text-center table-striped bg-white">
              <thead class="thead-dark">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Select</th>
              </tr>
              </thead>
              <tbody>
              <% br.products.each do |prd| %>
                <tr>
                  <th scope="row"><%= prd.product_id %></th>
                  <td><%= prd.product_name %></td>
                  <td><%= check_box_tag "list_prd[]", prd.product_id %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="form-group justify-content-center row">
          <%= submit_tag 'Continue', class: "btn btn-outline-success btn-lg mb-4"%>
        </div>
      <% end %>
      <%= link_to 'Return Back', biller_research_brand_path, class: "btn btn-info mb-3" %>
    </div>
  </div>
</div>