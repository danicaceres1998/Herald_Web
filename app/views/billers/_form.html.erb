<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @errors %>
      <%= form_with(model: @biller, class: "shadow mb-3 bg-secondary rounded", local: true)  do |f| %>
        <div class="form-group row mt-2">
          <%= f.label :from, class: "col-2 col-form-label ml-4 mt-4 text-black" %>
          <div class="col-9">
            <%= f.text_field :from, class: "form-control mt-4 shadow rounded", placeholder: "Your email" %>
          </div>
        </div>
        <div class="form-group row mt-2">
          <%= f.label :contacts, 'To' , class: "col-2 col-form-label ml-4 text-black" %>
          <div class="col-9">
            <%= f.text_field :contacts, class: "form-control shadow rounded", placeholder: "Contacts of the Biller (separated with \"; \")" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :error, class: "col-2 col-form-label ml-4 text-black" %>
          <div class="col-9">
            <%= f.text_area :error, rows: 10, class: "form-control shadow rounded", placeholder: "Put the Error here"%>
          </div>
        </div>
        <div class="form-group justify-content-center row">
          <%= f.submit 'Continue', class: "btn btn-outline-light btn-lg mb-3"%>
        </div>
      <% end %>
      <% if @biller.id.nil? %>
        <%= link_to 'Return Back', root_path, class: "btn btn-info mb-3" %>
      <% else %>
        <%= link_to 'Return Back', biller_path(@biller), class: "btn btn-info mb-3", method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
    </div>
  </div>
</div>